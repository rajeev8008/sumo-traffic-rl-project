<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- Vehicle Type Definitions -->
    <vType id="default_car" vClass="passenger" />

    <!-- This is the vehicle mix for our accurate, data-driven flows -->
    <vTypeDistribution id="mg_road_mix">
        <vType id="motorcycle" vClass="motorcycle" probability="0.5174" />
        <vType id="car" vClass="passenger" probability="0.2490" />
        <vType id="auto" vClass="taxi" probability="0.1891" />
        <vType id="bus" vClass="bus" probability="0.0313" />
        <vType id="truck" vClass="truck" probability="0.0083" />
    </vTypeDistribution>

    <!-- EMERGENCY VEHICLES - High Priority -->
    <vType id="ambulance" vClass="emergency" color="255,0,0" length="5.0" maxSpeed="35" />
    <vType id="fire_truck" vClass="emergency" color="255,0,0" length="9.0" maxSpeed="30" />

    <!-- 
      ==================================================================
      CONTINUOUS FLOW (00:00 - 20:00 | 1200 seconds)
      Scaled for Indiranagar network size (approx 2500-3000 vehicles total)
      Using only valid bidirectional edges from the actual network
      ==================================================================
    -->
    
    <!-- Flows from 100 Feet Road (27227507) - Primary North-South Route -->
    <flow 
        id="from_100ft_road_1_2" 
        begin="0" end="1200" 
        number="240" 
        type="mg_road_mix" 
        from="27227507#1" 
        to="27227507#3" />
    <flow 
        id="from_100ft_road_3_1" 
        begin="0" end="1200" 
        number="210" 
        type="mg_road_mix" 
        from="27227507#3" 
        to="27227507#1" />

