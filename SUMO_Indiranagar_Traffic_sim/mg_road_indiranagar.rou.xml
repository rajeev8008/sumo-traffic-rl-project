        begin="0" end="1200" 
        number="180" 
        type="mg_road_mix" 
        from="1054124407#2" 
        to="1054124407#2" />

    <!-- Flows from 100 Feet Road sections with good connectivity -->
    <flow 
        id="flow_27227507_2_4" 
        begin="0" end="1200" 
        number="190" 
        type="mg_road_mix" 
        from="27227507#2" 
        to="27227507#4" />
    <flow 
        id="flow_27227507_4_2" 
        begin="0" end="1200" 
        number="170" 
        type="mg_road_mix" 
        from="27227507#4" 
        to="27227507#2" />

    <flow 
        id="flow_543470383_2_5" 
        begin="0" end="1200" 
        number="210" 
